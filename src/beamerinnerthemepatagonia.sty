\ProvidesPackage{beamerinnerthemepatagonia}

\RequirePackage{pgfopts}
\RequirePackage{tikz}

\setbeamertemplate{title page}{
  \begin{minipage}[b][\paperheight]{\textwidth}
    \ifx\inserttitlegraphic\@empty\else\usebeamertemplate*{title graphic}\fi
    \vfill%
    \begin{minipage}{\textwidth}
      \ifx\inserttitle\@empty\else\usebeamertemplate*{title}\fi
      \usebeamertemplate*{title separator}
      \vspace*{0.04\paperheight}%
      \hbox to \textwidth{%
        \hfil%
        \begin{minipage}{0.8\textwidth}
          \centering
          \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor
          \ifx\insertinstitute\@empty\else
            \quad
            \usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute
          \fi
        \end{minipage}%
        \hfil%
      }
    \end{minipage}
    \vfill%
    \begin{minipage}{\textwidth}
      \hbox to \textwidth{%
        \usebeamercolor[fg]{date}\usebeamerfont{date}%
        \tiny\insertdate%
        \hfill}%
        \end{minipage}
    \vspace*{0.1\paperheight}
  \end{minipage}
}

\newlength{\patagonia@titleseparator@linewidth}
\setlength{\patagonia@titleseparator@linewidth}{4pt}
\setbeamertemplate{title separator}{
  \begin{tikzpicture}
    \fill[fg] (0,0) rectangle (\textwidth, \patagonia@titleseparator@linewidth);
  \end{tikzpicture}%
  \par%
}
